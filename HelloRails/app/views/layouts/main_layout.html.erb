          <li><a href="#">Aliquam quam</a></li>
        </ul>
      </div>
      <div class="cleaner"></div>
    </div>

    <!-- Slider block if necessary -->
    <% if @slider %>
    <%= render(:partial => "slider") %>
    <% end %>

    <!-- Content column -->
    <div id="right_column">

      <!-- Posts block -->
      <div id="main">
        <%= yield %>

        <!-- RSS feed block -->
        <div id="rss">
          <a href="#">SUBSCRIBE NOW <br /><span>to our RSS feed</span></a>
        </div>

      </div> <!-- End of Posts block-->

      <div class="cleaner"></div>

